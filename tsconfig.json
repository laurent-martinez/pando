  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/api/stripe.ts", "lib/GetStripe.ts", "lib/client.ts", "context/StateContext.tsx", "src/pages/product/[slug].tsx", "src/pages/_app.tsx", "src/pages/_document.tsx", "src/pages/success.tsx", "src/pages/index.tsx", "src/components/Cart.tsx", "src/components/Footer.tsx", "src/components/FooterBanner.tsx", "src/components/HeroBanner.tsx", "src/components/index.ts", "src/components/Layout.tsx", "src/components/Navbar.tsx", "src/components/Product.tsx", "lib/utils.ts"],
  "exclude": ["node_modules"]
}
